.scroll-info-list{
  height: calc(100vh - 160rpx)
}
.scroll-info-list.iphoneX{
  height: calc(100vh - 228rpx)
}
.info-item{
  background:#fff;
  position:relative;
  font-size: 28rpx;
  color:#333;
  padding: 24rpx;
  padding-left: 50rpx;
  margin-bottom: 20rpx;
  border-radius: 9rpx
}
.info-item:before{
  content: '';
  position:absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -7.5rpx;
  width: 15rpx;
  height: 15rpx;
  background:#1f65d8;
  border-radius: 50%;
}
.search-wrapper{
  position:relative;
  margin-bottom: 20rpx
}
.search-wrapper input{
  box-sizing:border-box;
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  border-radius: 4px;
  padding: 12rpx;
  background:#fff
}
