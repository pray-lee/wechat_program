.app{
    background:#fff;
    padding-top: 20rpx;
}
.search-wrapper{
    position:relative;
    padding: 20rpx;
    margin-bottom: 20rpx;
    background:#f1f1f1
}
.search-wrapper input{
    box-sizing:border-box;
    width: 100%;
    height: 100%;
    font-size: 24rpx;
    border-radius: 4px;
    padding: 20rpx;
}
.all-bill{
    padding: 30rpx;
    font-size: 30rpx;
    font-weight:bold;
    position:relative;
}
.select-bill-wrapper{
    background:#fff;
    position:absolute;
    z-index: 99999;
    top: 80rpx;
    left:0;
    padding: 20rpx;
    display:flex;
    flex-wrap:wrap;
    transform: translateY(-200%);
    border-bottom: 2px solid #ccc
}
.bill-btn{
    display:inline-block;
    width:45%;
    height:70rpx;
    line-height:70rpx;
    padding-left:70rpx;
    box-sizing:border-box;
    font-size:25rpx;
    margin-bottom: 10rpx;
    font-weight:normal;
    border: 1px solid #ccc;
    border-radius: 8px;
    margin-right: 5%;
}
.see-complete-bill{
    font-size: 26rpx;
    margin: 0 30rpx;
    border-radius: 6rpx;
    border: 2rpx solid #3276c3;
    margin-bottom: 20rpx;
    display:flex;
}
.see-complete-bill .div{
    flex: 1;
    background:#fff;
    height: 60rpx;
    color:#333333;
    text-align:center;
    line-height: 60rpx;
    font-size: 24rpx;
}
.see-complete-bill .active{
    background:#3276c3;
    color: #fff;
}
.scroll-view{
    height: calc(100vh - 100rpx);
}
.scroll-view.iphoneX{
    height: calc(100vh - 168rpx)
}
.list-item {
    margin:0px auto;
    background:#fff;
    padding: 0 40rpx;
}
.main-item {
    padding-top: 45rpx
}
.main-item:first-child {
    padding-top: 0 !important;
}
.content{
    padding: 8rpx 0
}
.content-bottom{
    justify-content: space-between;
    font-weight:normal;
    color:#666;
}
.content > .left{
    width: 11em;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.content-bottom .right{
    margin-left: 30rpx;
}
.content .approval-time{
    font-size: 24rpx;
    font-weight:normal;
    color:#ccc;
}
.list-wrapper{
    padding: 0 0 20rpx 20rpx;
}
