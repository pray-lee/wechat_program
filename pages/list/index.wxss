
.scroll-view{
    height: calc(100vh - 200rpx)
}
.scroll-view.iphoneX{
    height: calc(100vh - 268rpx)
}
.list-item {
    margin:0px auto;
    margin-bottom: 20rpx;
    background:#fff;
}
.tabs{
    display:flex;
    justify-content: space-around;
    align-items: center;
    height: 80rpx;
    color:#333;
    font-size: 28rpx;
    background:#fff;
    margin-bottom: 20rpx
}
.tab{
    width: 170rpx;
    text-align:center;
    line-height: 80rpx;
    border-bottom: 5rpx solid transparent
}
.content1{
    display:flex;
    justify-content: space-between;
}
.remark{
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}

.movable-area{
  width: 100%;
  height: 190rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.content {
  width: 100%;
  padding: 25rpx 50rpx;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px
}
.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
