<view class="info-wrapper">
    <view class="search-wrapper">
        <view class="search-content">
            <input type="text" placeholder="搜索" placeholder-class="placeholder" bindinput="bindinput" value="{{inputValue}}"/>
            <image src="../../../images/delete.png" mode="scaleToFill" class="input-delete-icon" bindtap="clearWord"></image>
        </view>
    </view>
    <scroll-view bindscrolltolower="loadMoreData" scroll-y class="scroll-info-list {{isPhoneXSeries ? 'iphoneX' : ''}}">
        <view class="info-item" wx:for="{{goodsList}}" wx:key="index" data-id="{{item.id}}" bindtap="goBack">
            {{item.goodsName}} {{item.auxiliaryAttributeName || ''}}
        </view>
    </scroll-view>
</view>
